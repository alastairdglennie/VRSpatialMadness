package improbable.player;

type ViveTransform {
	Coordinates position = 1;
	Quaternion rotation = 2;
}

type Quaternion {
	float x = 1;
	float y = 2;
	float z = 3;
	float w = 4;
}

component VivePlayer {
    id = 1002;

    ViveTransform head = 1;
    ViveTransform left_hand = 2;
    ViveTransform right_hand = 3;
}
